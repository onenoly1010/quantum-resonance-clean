# Database Configuration
DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/ledger_db

# Authentication
# IMPORTANT: Store actual JWT secret in Supabase secrets or encrypted vault
# Never commit real secrets to the repository
GUARDIAN_JWT_SECRET=your-secret-key-here-store-in-secure-vault

# API Configuration
API_HOST=0.0.0.0
API_PORT=8001
API_RELOAD=true

# Logging
LOG_LEVEL=INFO

# Wallet Configuration
# SECURITY: All wallet addresses/keys must be stored in Supabase secrets or encrypted vault
# Use references like: ${SUPABASE_SECRET:wallet_address_main}
# Example redacted wallet: GDxxx...xxxx (first 3 and last 4 characters only)
TREASURY_WALLET_REF=${SUPABASE_SECRET:treasury_wallet_address}
