# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/ledger_db

# API Settings
API_SECRET_KEY=change-this-to-a-secure-random-string
API_TITLE=Ledger API
API_VERSION=1.0.0
API_HOST=0.0.0.0
API_PORT=8001

# Authentication
AUTH_ENABLED=true
JWT_SECRET=change-this-to-a-secure-jwt-secret
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=60

# CORS Settings
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Treasury Settings
DEFAULT_CURRENCY=USD
TREASURY_ACCOUNT_PREFIX=TRS

# Reconciliation
AUTO_RECONCILE=false
RECONCILIATION_THRESHOLD=0.01
